<?xml version="1.0" encoding="UTF-8"?>
<MessageCollection xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="messagecollection.xsd">

        <Plugin>
                <ShortDescription>JIC Plugin</ShortDescription>
                <Details>Java Immutability Checker Plugin</Details>
        </Plugin>

        <Detector class="de.seerhein_lab.jca.JicDetector">
                <Details>
                        Starts proper construction check for class under inspection.
                </Details>

        </Detector>

        <BugPattern type="IMMUTABILITY_BUG">
                <ShortDescription>Immutability bug [v2.0]</ShortDescription>
                <LongDescription>Immutability bug: {0}</LongDescription>
                <Details>
<![CDATA[
<p>The class is annoted with @Immutable but is mutable, or its instances are not properly constructed
	(also applies to intentionally mutable classes).
</p>
]]>
                </Details>
        </BugPattern>

        <BugCode abbrev="IM">Immutability</BugCode>
</MessageCollection>