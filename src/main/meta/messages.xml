<?xml version="1.0" encoding="UTF-8"?>
<MessageCollection xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="messagecollection.xsd">

        <Plugin>
                <ShortDescription>JCA Plugin</ShortDescription>
                <Details>Jaca Concurrency Analyzer Plugin</Details>
        </Plugin>

        <Detector class="de.seerhein_lab.jca.JcaDetector">
                <Details>
                        Starts proper construction check for class under inspection.
                </Details>

        </Detector>

        <BugPattern type="PROPER_CONSTRUCTION_BUG">
                <ShortDescription>Improper construction [v2.0]</ShortDescription>
                <LongDescription>Improper construction: {0}</LongDescription>
                <Details>
<![CDATA[
<p>The reference of the object under construction escapes prematurely. 
	This might let others see the object in an incomplete, invalid state.
</p>
]]>
                </Details>
        </BugPattern>

        <BugCode abbrev="PC">Improper construction</BugCode>
</MessageCollection>